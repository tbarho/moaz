<%= form_for @option do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= f.hidden_field :property_id %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :value %>
    <%= f.text_field :value %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
