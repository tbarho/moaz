<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "posts" %>
<% end %>

<div class="post">
	<h1>
    <span id="post_title" class="mercury-region" data-type="editable"><%= raw @post.title %></span>
  </h1>
	<div class="author">
    Posted <%= time_ago_in_words @post.updated_at %> ago by <%= @post.user.name %>
  </div>
  <div id="post_body" class="mercury-region" data-type="editable">
    <%= raw @post.body %>
  </div>
</div>

<% if current_user && current_user.admin? %>
<%= link_to 'Edit', "/editor" + request.path, id: "edit_link", data: { save_url: mercury_update_post_path(@post.id) } %> |
<% end %>
<%= link_to 'Back', posts_path %>
