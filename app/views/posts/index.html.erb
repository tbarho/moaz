<h1>
  <strong>Our</strong> Blog
  <% if current_user && current_user.admin? %>
  <span><%= link_to 'New Post', new_post_path, :class => "button" %></span>
  <% end %>
</h1>
<% @posts.each do |post| %>
<div class="border-bot">
<h3 class="text-1"><%= link_to post.title, post %></h3>
<p>Posted <%= time_ago_in_words post.created_at %> ago by <%= post.user.name %><p>
<p><%= raw post.body %></p>
  <% if current_user && current_user.admin? %>
    <p>
      <%= link_to 'Edit', edit_post_path(post) %>  |  
      <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %>
  <% end %>
</div>
<% end %>

